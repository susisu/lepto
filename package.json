{
  "name": "lepto",
  "version": "0.0.0",
  "description": "",
  "main": "lib/lepto.js",
  "scripts": {
    "lint": "eslint src --fix",
    "test": "nyc --reporter=html --reporter=text ava src/*.test.js --timeout=3000",
    "build": "cross-env BABEL_ENV=production babel src -d lib",
    "doc": "esdoc",
    "clean": "rimraf lib doc",
    "prepublish": "run-s clean build doc"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/susisu/lepto.git"
  },
  "author": "Susisu <susisu2413@yahoo.co.jp> (https://github.com/susisu)",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/susisu/lepto/issues"
  },
  "homepage": "https://github.com/susisu/lepto#readme",
  "devDependencies": {
    "ava": "^0.19.0",
    "babel-cli": "^6.24.0",
    "babel-core": "^6.24.0",
    "babel-preset-es2015-node": "^6.1.1",
    "cross-env": "^4.0.0",
    "esdoc": "^0.5.2",
    "eslint": "^3.19.0",
    "npm-run-all": "^4.0.2",
    "nyc": "^10.2.0",
    "rimraf": "^2.6.1"
  },
  "babel": {
    "presets": [
      "es2015-node"
    ],
    "ignore": [
      "src/*.test.js"
    ],
    "env": {
      "development": {
        "sourceMaps": "inline"
      }
    }
  },
  "ava": {
    "require": [
      "babel-core/register"
    ]
  }
}
